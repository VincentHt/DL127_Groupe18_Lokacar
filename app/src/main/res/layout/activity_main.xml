<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ConnexionActivity"
    android:orientation="vertical"
    android:background="#FFF"
    android:gravity="center">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/mNomAgenceDefiniTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start" />

        <Button
            android:id="@+id/btnChangementAgence"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="changementAgenceOnClick"
            android:text="Changer d'agence"
            android:background="@android:color/transparent"
            android:padding="0dp"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:contentDescription="@string/cdImageAccueil"
        android:src="@drawable/accueil_lokacar_png" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <!--<EditText
            android:id="@+id/login"
            android:layout_width="200dp"
            android:hint="@string/hintLogin"
            android:inputType="text"
            android:textStyle="italic"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:padding="5dp"
            android:shadowRadius="@android:integer/config_shortAnimTime"
            android:background="#FFFFFF"/>

        <EditText
            android:id="@+id/motDePasse"
            android:layout_width="200dp"
            android:hint="@string/hintMotDePasse"
            android:textStyle="italic"
            android:textAlignment="center"
            android:inputType="textPassword"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:padding="5dp"
            android:background="#FFFFFF"/>

        <Button
            android:id="@+id/btnConnexion"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/btnConnexion"
            android:layout_margin="2dp"
            android:padding="5dp"
            android:onClick="onClickConnexion"/>-->

        <EditText
            android:id="@+id/mNomAgenceEditText"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Entrez le nom de votre agence"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/mPasseAgenceEditText"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Choisissez un mot de passe"
            android:textSize="18sp"
            android:inputType="textPassword"
            />
        <Button
            android:id="@+id/mValiderNomAgenceButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:clickable="true"
            android:onClick="onClickValiderAgence"
            android:text="Valider"
            />

        <EditText
            android:id="@+id/mPasswordEditText"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Entrez le mot de passe"
            android:textSize="22sp"
            android:inputType="textPassword"/>
        <Button
            android:id="@+id/mConnectionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:clickable="true"
            android:onClick="onClickValiderConnexion"
            android:text="Se connecter"/>

    </LinearLayout>


</LinearLayout>