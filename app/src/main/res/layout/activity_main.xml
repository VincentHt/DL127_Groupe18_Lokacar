<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ConnexionActivity"
    android:orientation="vertical"
    android:background="#FFF"
    android:gravity="center">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:contentDescription="@string/cdImageAccueil"
        android:src="@drawable/accueil_lokacar_png" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <EditText
            android:id="@+id/login"
            android:layout_width="200dp"
            android:hint="@string/hintLogin"
            android:inputType="text"
            android:textStyle="italic"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:padding="5dp"
            android:shadowRadius="@android:integer/config_shortAnimTime"
            android:background="#FFFFFF"/>

        <EditText
            android:id="@+id/motDePasse"
            android:layout_width="200dp"
            android:hint="@string/hintMotDePasse"
            android:textStyle="italic"
            android:textAlignment="center"
            android:inputType="textPassword"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:padding="5dp"
            android:background="#FFFFFF"/>

        <Button
            android:id="@+id/btnConnexion"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/btnConnexion"
            android:layout_margin="2dp"
            android:padding="5dp"
            android:onClick="onClickConnexion"/>

    </LinearLayout>


</LinearLayout>